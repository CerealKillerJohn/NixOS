{host, pkgs, ...}:

let vol-up = pkgs.writeShellApplication {
    name = "vol-up";
    runtimeInputs = [
      pkgs.mako
      pkgs.pamixer
    ];
    text = ''
      pamixer -i 5
      sleep 0.5
      notify-send -t 1000 "$( pamixer --get-volume ) %"
    '';
}; in {
    home.packages = [vol-up];
}

